<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base text style -->
    <style name="BaseText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Heading text style -->
    <style name="TextHeading" parent="BaseText">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontWeight">600</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <!-- Sub-heading text style -->
    <style name="TextSubHeading" parent="BaseText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Regular text style -->
    <style name="TextRegular" parent="BaseText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="BaseButtonStyle">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="Button.Primary" parent="BaseButtonStyle">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Primary.Small" parent="Button.Primary">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingHorizontal">4dp</item>
    </style>

    <!-- Form styling -->
    <!-- Base style for EditText -->
    <style name="TextInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/text_input_border</item>
    </style>

    <!-- Base style for icon -->
    <style name="IconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/primary</item>

    </style>
</resources>