<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseButtonStyle">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="Button.Primary" parent="BaseButtonStyle">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Primary.Small" parent="Button.Primary">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>