<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    app:layout_constraintWidth="320dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextViewSingUpUniNook"
            style="@style/TextHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change timer"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutFocusSettingPomodoro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextSubHeading"
            android:layout_gravity="center"
            android:text="Pomodoro Timer" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayoutFocusSettingPomodoro"
        android:layout_width="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/EditTextFocusSettingHours"
                style="@style/TextInputStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12sp"
                android:autofillHints="numbers"
                android:hint="hours"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextSubHeading"
                android:layout_marginStart="24dp"
                android:layout_marginVertical="8dp"
                android:text="hours" />

            <EditText
                android:id="@+id/EditTextFocusSettingMins"
                style="@style/TextInputStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12sp"
                android:layout_marginStart="24dp"
                android:hint="minutes"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextSubHeading"
                android:layout_marginStart="24dp"
                android:layout_marginVertical="8dp"
                android:inputType="number"
                android:text="minutes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Button.Primary"
                android:text="Save" />
        </LinearLayout>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="36dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextSubHeading"
            android:layout_gravity="center"
            android:text="Short Break" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/EditTextFocusSettingShortBreakMins"
            style="@style/TextInputStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12sp"
            android:layout_marginStart="24dp"
            android:hint="minutes"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextSubHeading"
            android:layout_marginStart="24dp"
            android:layout_marginVertical="8dp"
            android:inputType="number"
            android:text="minutes" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Button.Primary"
            android:text="Save" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="36dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextSubHeading"
            android:layout_gravity="center"
            android:text="Long Break" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/EditTextFocusSettingLongBreakMins"
            style="@style/TextInputStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12sp"
            android:layout_marginStart="24dp"
            android:hint="minutes"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextSubHeading"
            android:layout_marginStart="24dp"
            android:layout_marginVertical="8dp"
            android:inputType="number"
            android:text="minutes" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Button.Primary"
            android:text="Save" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/Button.Primary"
        android:text="Close"
        android:layout_marginTop="24dp" />

</LinearLayout>
</ScrollView>