<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    app:layout_constraintWidth="320dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center">

        <ImageView
            style="@style/IconStyle"
            android:src="@drawable/ic_timer"
            android:layout_marginStart="24dp"
            android:paddingTop="8dp"
            android:scaleX="1.5"
            android:scaleY="1.5">
        </ImageView>

        <TextView
            android:id="@+id/TextViewFocusSettingTitle"
            style="@style/TextHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change timer"
            android:layout_marginStart="24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutFocusSettingPomodoro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center_horizontal">

        <ImageView
            style="@style/IconStyle"
            android:src="@drawable/ic_arrow_down"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            style="@style/TextSubHeading"
            android:layout_gravity="center"
            android:text="Pomodoro Timer" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayoutFocusSettingPomodoro"
        android:layout_width="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/EditTextFocusSettingHours"
                style="@style/TextInputStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12sp"
                android:autofillHints="numbers"
                android:hint="hours"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextSubHeading"
                android:layout_marginStart="24dp"
                android:layout_marginVertical="8dp"
                android:text="hours" />

            <EditText
                android:id="@+id/EditTextFocusSettingMins"
                style="@style/TextInputStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12sp"
                android:layout_marginStart="24dp"
                android:hint="minutes"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextSubHeading"
                android:layout_marginStart="24dp"
                android:layout_marginVertical="8dp"
                android:inputType="number"
                android:text="minutes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Button.Primary"
                android:text="Save" />
        </LinearLayout>

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/LinearLayoutFocusSettingShortBreak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center_horizontal">

        <ImageView
            style="@style/IconStyle"
            android:src="@drawable/ic_arrow_down"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextSubHeading"
            android:layout_gravity="center"
            android:paddingHorizontal="20dp"
            android:layout_marginStart="24dp"
            android:text="Short Break" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayoutFocusSettingShortBreak"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <EditText
                android:id="@+id/EditTextFocusShortBreakSetting"
                style="@style/TextInputStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="minutes"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextSubHeading"
                android:layout_marginStart="24dp"
                android:layout_marginVertical="8dp"
                android:inputType="number"
                android:text="minutes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Button.Primary"
                android:text="Save" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutFocusSettingLongBreak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center_horizontal">

        <ImageView
            style="@style/IconStyle"
            android:src="@drawable/ic_arrow_down"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextSubHeading"
            android:layout_gravity="center"
            android:paddingHorizontal="22dp"
            android:layout_marginStart="24dp"
            android:text="Long Break" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayoutFocusSettingLongBreak"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <EditText
                android:id="@+id/EditTextFocusLongBreakSetting"
                style="@style/TextInputStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="minutes"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextSubHeading"
                android:layout_marginStart="24dp"
                android:layout_marginVertical="8dp"
                android:inputType="number"
                android:text="minutes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Button.Primary"
                android:text="Save" />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/ButtonFocusSettingClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/Button.Primary"
        android:layout_marginStart="8dp"
        android:text="Close"
        android:layout_marginTop="72dp" />

</LinearLayout>
</ScrollView>